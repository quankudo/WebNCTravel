<div id="confirmModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 flex justify-center items-center hidden">
    <div class="bg-white p-6 rounded-lg shadow-lg w-1/3">
        <h2 class="text-xl text-black"><i class="fa-solid fa-circle-info text-blue-500"></i> Thông báo</h2>
        <p class="text-black font-light">Bạn có chắc chắn muốn xóa khách hàng có thông tin: <strong id="info"></strong>?</p>
        <div class="flex justify-end mt-4">
            <button id="cancelButton" class="px-4 py-2 bg-gray-300 text-black rounded-lg hover:bg-gray-500 mr-2">
                Hủy
            </button>
            <button id="confirmButton" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-700">
                Xoá
            </button>
        </div>
    </div>
</div>

<script>
      const deleteButtons = document.querySelectorAll('.delete-button');
      const confirmModal = document.getElementById('confirmModal');
      const tourNameSpan = document.getElementById('tourName');
      const cancelButton = document.getElementById('cancelButton');
      const confirmButton = document.getElementById('confirmButton');
      const info = document.getElementById('info');
      // Lắng nghe sự kiện click cho từng nút
      deleteButtons.forEach(button => {
          button.addEventListener('click', () => {
              // Lấy giá trị data-id
              const customerId = button.getAttribute('data-id');
              const customerName = button.getAttribute('data-name');

              confirmModal.classList.remove('hidden');
              info.innerText = `${customerId} ${customerName}`
          });
      });
      cancelButton.addEventListener('click', function () {
        confirmModal.classList.add('hidden');
      });

      // Xóa hàng khi nhấn "Xoá" trong modal
      confirmButton.addEventListener('click', function () {
        confirmModal.classList.add('hidden');
      });

</script>