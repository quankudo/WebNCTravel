        <div class="flex justify-end mt-4">
            <button id="cancelButton" class="px-4 py-2 bg-gray-300 text-black rounded-lg hover:bg-gray-400 mr-2">
                Hủy
            </button>
            <button id="confirmButton" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-700">
                Xoá
            </button>
        </div>
    </div>
</div>

<script>
      const deleteButtons = document.querySelectorAll('.delete-button');
      const confirmModal = document.getElementById('confirmModal');
      const tourNameSpan = document.getElementById('tourName');
      const cancelButton = document.getElementById('cancelButton');
      const confirmButton = document.getElementById('confirmButton');
      const info = document.getElementById('info');
      // Lắng nghe sự kiện click cho từng nút
      deleteButtons.forEach(button => {
          button.addEventListener('click', () => {
              // Lấy giá trị data-id
              const customerId = button.getAttribute('data-id');
              const customerName = button.getAttribute('data-name');

              confirmModal.classList.remove('hidden');
              info.innerText = `${customerId} ${customerName}`
          });
      });
      cancelButton.addEventListener('click', function () {
          confirmModal.classList.add('hidden');
      });

      // Xóa hàng khi nhấn "Xoá" trong modal
      confirmButton.addEventListener('click', function () {
          confirmModal.classList.add('hidden');
      });

      const btnApDung = document.querySelectorAll('.btnApDung');
      const updateGift = document.getElementById('updateGift');
      const cancelAdd = document.getElementById('cancelAdd');
      const closelAdd = document.getElementById('closeAdd');
      const txtId = document.getElementById('txtId');
      const txtName = document.getElementById('txtName');
      const txtValue = document.getElementById('txtValue');
      console.log(closelAdd);

      btnApDung.forEach(function(btn) {
        btn.addEventListener('click', function() {
          updateGift.classList.remove('hidden');

          txtId.innerText = btn.getAttribute('data-id');
          txtName.innerText = btn.getAttribute('data-name');
          txtValue.innerText = btn.getAttribute('data-value');
        })
      })

      cancelAdd.addEventListener('click', function () {
        updateGift.classList.add('hidden');
      });
      closelAdd.addEventListener('click', function () {
        updateGift.classList.add('hidden');
      });
</script>

